<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/menuBackground</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuSytle</item>
    </style>
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/menuForeground</item>
    </style>

    <style name="myPopupMenuSytle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/menuForeground</item>
        <item name="android:itemBackground">@color/menuBackground</item>
    </style>
